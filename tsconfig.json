{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src", // thư mục chứa các file TypeScript
      "baseUrl": "src", // thư mục gốc của dự án
      "paths": { // liệt kê các alias (tên rút gọn) cho các đường dẫn trong dự án
        "routes/*": ["routes/*"],
        "pages/*": ["pages/*"],
        "features/*": ["features/*"],
        "app/*": ["app/*"],
        "utils/*": ["utils/*"],
        "shared/*": ["shared/*"],
      },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
